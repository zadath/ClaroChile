<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_auto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txt_nombre_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="Combo 1 Play  ilimitado"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_descripcion_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Descripción del Combo"/>

    <TextView
        android:id="@+id/txt_precio_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aquí va el precio del combo"/>
</LinearLayout>

</androidx.cardview.widget.CardView>